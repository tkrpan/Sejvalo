<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Sejvalo" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_sejvalo</item>
        <item name="popupMenuStyle">@style/PopupMenu.Sejvalo</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Sejvalo</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Sejvalo</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background_sejvalo</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Sejvalo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Sejvalo</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Sejvalo</item>
        
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:buttonStyle">@style/ButtonCustom</item> 
        <item name="android:listViewStyle">@style/ListStyle</item> 
    </style>

    <style name="ActionBar.Solid.Sejvalo" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/actionbar_gradient</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
        <item name="logo">@drawable/logo</item>
        <item name="titleTextStyle">@style/TitleFontColor</item>
        
         <item name="android:background">@drawable/actionbar_gradient</item>
        <item name="android:displayOptions">showHome|useLogo|showTitle</item>
        <item name="android:logo">@drawable/logo</item>
        <item name="android:titleTextStyle">@style/TitleFontColor</item>
    </style>

	
    <style name="PopupMenu.Sejvalo" parent="@style/Widget.Sherlock.Light.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sejvalo</item>	
    </style>
	
    <style name="DropDownListView.Sejvalo" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_sejvalo</item>
    </style>

	
       
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Sejvalo.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Sejvalo</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Sejvalo</item>
    </style>
    
    
    <style name="ButtonCustom" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/ljubicasta</item>
        <item name="android:background"> @drawable/moja_tipka_button </item>
        <item name="android:textSize">16sp</item>
    </style>
    
     <style name="ETBackground" parent="@android:style/Widget.EditText">
	 <item name="android:background">@drawable/moja_tipka_edittext</item>
     </style>
     
   <style name="ListStyle" parent="@android:style/Widget.ListView">
	 <item name="android:background">@android:color/white</item>
	 <item name="android:divider">@drawable/divider</item>
	 <item name="android:listSelector">@drawable/list_selector</item>
     </style>
     
   <style name="TitleFontColor" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
	<item name="android:textColor">@color/actionbar_color</item>
	<item name="android:typeface">sans</item>
   </style>
   
 
   
     
</resources>