        <item name="android:actionBarStyle">@style/ActionBar.Solid.Sejvalo</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_sejvalo</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_sejvalo</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Sejvalo</item>
        
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:buttonStyle">@style/ButtonCustom</item> 
        <item name="android:listViewStyle">@style/ListStyle</item> 
    </style>

    <style name="ActionBar.Solid.Sejvalo" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@android:color/white</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_sejvalo</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_sejvalo</item>
        <item name="progressBarStyle">@style/ProgressBar.Sejvalo</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
        <item name="logo">@drawable/logo</item>
        <item name="titleTextStyle">@style/TitleFontColor</item>
        
         <item name="android:background">@android:color/white</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_sejvalo</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_sejvalo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Sejvalo</item>
        <item name="android:displayOptions">showHome|useLogo|showTitle</item>
        <item name="android:logo">@drawable/logo</item>
        <item name="android:titleTextStyle">@style/TitleFontColor</item>
    </style>

    <style name="ActionBar.Transparent.Sejvalo" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_sejvalo</item>
        <item name="progressBarStyle">@style/ProgressBar.Sejvalo</item>
    </style>
	
    <style name="PopupMenu.Sejvalo" parent="@style/Widget.Sherlock.Light.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sejvalo</item>	
    </style>
	
    <style name="DropDownListView.Sejvalo" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_sejvalo</item>
    </style>

    <style name="ActionBarTabStyle.Sejvalo" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_sejvalo</item>
    </style>
	
    <style name="DropDownNav.Sejvalo" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_sejvalo</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sejvalo</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_sejvalo</item>
    </style>
    
    <style name="ProgressBar.Sejvalo" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sejvalo</item>
    </style>
    
    <style name="ActionButton.CloseMode.Sejvalo" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_sejvalo</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Sejvalo.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Sejvalo</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Sejvalo</item>
    </style>
    
    
    <style name="ButtonCustom" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/ljubicasta</item>
        <item name="android:background"> @drawable/moja_tipka_button </item>
        <item name="android:textSize">16sp</item>
    </style>
    
     <style name="ETBackground" parent="@android:style/Widget.EditText">
	 <item name="android:background">@drawable/moja_tipka_edittext</item>
     </style>
     
   <style name="ListStyle" parent="@android:style/Widget.ListView">
	 <item name="android:background">@android:color/white</item>
	 <item name="android:divider">@drawable/divider</item>
	  <item name="android:layout_marginLeft">5dp</item>
	   <item name="android:layout_marginRight">5dp</item>
     </style>
     
   <style name="TitleFontColor" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
	<item name="android:textColor">@color/actionbar_color</item>
	<item name="android:typeface">sans</item>
   </style>
   
 
   
     
