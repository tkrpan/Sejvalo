        <item name="actionDropDownStyle">@style/DropDownNav.Sejvalo</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Sejvalo</item>
        <item name="actionModeBackground">@drawable/cab_background_top_sejvalo</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_sejvalo</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Sejvalo</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background_sejvalo</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Sejvalo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Sejvalo</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Sejvalo</item>
