<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tkrpan.sejvalo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.NoActionBar" >
        <activity
            android:name="com.tkrpan.sejvalo.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tkrpan.sejvalo.FirstActivity"
            android:label="@string/title_activity_first"
            android:theme="@style/Theme.Sejvalo" >
            <intent-filter>
                <action android:name="First" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tkrpan.sejvalo.MojePretrage"
            android:label="@string/title_activity_moje_pretrage"
            android:theme="@style/Theme.Sejvalo" >
        </activity>
        <activity
            android:name="com.tkrpan.sejvalo.MojiOglasi"
            android:label="@string/title_activity_moji_oglasi"
            android:theme="@style/Theme.Sejvalo" >
        </activity>
        <activity
            android:name="com.tkrpan.sejvalo.InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/Theme.Sejvalo" >
        </activity>
    </application>

</manifest>
