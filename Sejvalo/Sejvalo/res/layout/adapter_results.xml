<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AdapterResLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/imageAdapter"
        android:maxLength="60"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/dateAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageAdapter"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/imageAdapter"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageAdapter"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/priceAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateAdapter"
        android:layout_alignBottom="@+id/dateAdapter"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_marginRight="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>